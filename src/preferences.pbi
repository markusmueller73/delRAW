     WriteStringN(file_h, "")        WriteStringN(file_h, "last preview directory = " + *c\last_prev_dir)        WriteStringN(file_h, "last RAW directory = " + *c\last_raw_dir)        WriteStringN(file_h, "")        WriteStringN(file_h, "# eof")        CloseFile(file_h)    Else        err("Can't create config file: " + GetHomeDirectory() + #APP_SAVE_PATH + #APP_CONFIG)        ProcedureReturn 0    EndIf    EndProcedure; IDE Options = PureBasic 6.02 LTS (Windows - x64); CursorPosition = 70; Folding = -; Optimizer; EnableXP; EnablePurifier; EnableCompileCount = 0; EnableBuildCount = 0; EnableExeConstant